<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=New+Tegomin&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
    <title>Document</title>
</head>

<body>


    <h1 class="iconv">PostrHuntr</h1>


    <div class="search_wrapper">
        <form action="/search" method="post">
            <input type="text" name="searchInput" id="btn">
            <input type="submit" value="SEARCH" id="btn_submit">
        </form>

        <form action="/favorites" method="get">
            <input type="submit" value="FAVORITES" id="btn_submit">
        </form>
    </div>
   

    <section class="wrapper">
        <% data.forEach(element=> { %>

            <a href=<%=`/movieDetails/${element.id}`%>>
                <figure>
                    <img src=<%=`https://image.tmdb.org/t/p/w500/${element.poster_path}`%> alt="">
                    
                </figure>
            </a>
            <% }) %>
    </section>

    <section class="container_pag">
        <div class="paginator">
            <%- include('../partials/pagination.ejs') %>
        </div>
    </section>
    
    

</body>

</html>